<Page x:Class="TaskManagementKonovalov.PageFolder.AdminPageFolder.ListStaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManagementKonovalov.PageFolder.AdminPageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="545" d:DesignWidth="900"
      Title="Список сотрудников">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="SearchLb"
               Content="Поиск"
               Style="{StaticResource LabelNormal}"
               Grid.Column="1"/>
        <TextBox x:Name="SearchTb"
                 Grid.Column="2"
                 TextChanged="SearchTb_TextChanged"/>

        <ListBox x:Name="StaffListB"
                 SelectionMode="Single"
                 Grid.Row="3"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 HorizontalContentAlignment="Stretch"
                ItemsSource="{Binding Path=ResizeItems}" 
                BorderThickness="0">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Посмотреть данные"
                              Name="ViewerStaffMi"
                              Click="ViewerStaffMi_Click"/>
                    <MenuItem Header="Добавление"
                          Name="AddStaffMi"
                          Click="AddStaffMi_Click"/>
                    <MenuItem Header="Редактирование"
                          Name="EditStaffMi"
                          Click="EditStaffMi_Click"/>
                    <MenuItem Header="Сбросить пароль"
                          Name="ResetPasswordStaffMi"
                          Click="ResetPasswordStaffMi_Click"/>
                    <MenuItem Header="Удаление"
                          Name="DeleteStafffMi"
                          Click="DeleteStafffMi_Click"/>
                    <MenuItem Header="Обновить страницу"
                          Name="UpdateStaffMi"
                          Click="UpdateStaffMi_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        
                        <Image Source="{Binding PhotoStaff}"
                               Grid.Row="1"
                               Grid.Column="1"
                               Grid.ColumnSpan="5"
                               Width="200"
                               Margin="10"
                               Stretch="Uniform"/>
                        <TextBlock Grid.Row="3"
                                   Grid.Column="1"
                                   Text="{Binding FirstNameStaff}"
                                   Style="{DynamicResource TBlListBox}"
                                   TextAlignment="Center"
                                   TextWrapping="WrapWithOverflow"/>
                        <TextBlock Grid.Row="5"
                                   Grid.Column="1"
                                   Text="{Binding LastNameStaff}"
                                   Style="{DynamicResource TBlListBox}"
                                   TextAlignment="Center"
                                   TextWrapping="WrapWithOverflow"/>
                        <TextBlock Grid.Row="7"
                                   Grid.Column="1"
                                   Text="{Binding MiddleNameStaff}"
                                   Style="{DynamicResource TBlListBox}"
                                   TextAlignment="Center"
                                   TextWrapping="WrapWithOverflow"/>

                        <TextBlock Grid.Row="9"
                                   Grid.Column="1"
                                   Text="{Binding Classification.NameClassification}"
                                   Style="{DynamicResource TBlListBox}"
                                   TextAlignment="Center"
                                   TextWrapping="WrapWithOverflow"/>

                        <TextBlock Grid.Row="11"
                                   Grid.Column="1"
                                   Text="{Binding Directions.NameDirections}"
                                   Style="{DynamicResource TBlListBox}"
                                   TextAlignment="Left"
                                   TextWrapping="WrapWithOverflow"/>
                        <TextBlock Grid.Row="11"
                                   Grid.Column="1"
                                   Text="{Binding Experience}"
                                   Style="{DynamicResource TBlListBox}"
                                   TextAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   TextWrapping="WrapWithOverflow"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Page>

<Page x:Class="TaskManagementKonovalov.PageFolder.AdminPageFolder.EditePassportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManagementKonovalov.PageFolder.AdminPageFolder"
      mc:Ignorable="d" 
            d:DesignHeight="545" d:DesignWidth="900"
      Title="Редактирование клиента">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Серия и №"
Grid.Row="1"
Grid.Column="2"
Style="{StaticResource LabelNormal}"/>
        <TextBox x:Name="PassportSeriesTb"
  Grid.Row="1"
  Grid.Column="3"
                 SpellCheck.IsEnabled="False"
                 PreviewTextInput="PassportSeriesTb_PreviewTextInput"/>
        <TextBox x:Name="PassportNumberTb"
Grid.Row="1"
Grid.Column="3"
 Margin="103,10,10,10"
                 SpellCheck.IsEnabled="False"
                 PreviewTextInput="PassportNumberTb_PreviewTextInput"/>

        <Button x:Name="LessBtn"
                Content="-"
                Grid.Row="5"
                Grid.Column="1"
                Click="LessBtn_Click"/>

        <Label Content="Дата выдачи"
               Grid.Row="3"
               Grid.Column="2"
               Style="{StaticResource LabelNormal}"/>
        <DatePicker x:Name="DateUssuePb"
                    Grid.Row="3"
                    Grid.Column="3"
                    PreviewKeyDown="DateUssuePb_PreviewKeyDown"/>

        <Label Content="Адрес рег"
               Grid.Row="5"
               Grid.Column="2"
               Style="{StaticResource LabelNormal}"/>
        <TextBox x:Name="RegistrationAddressTb"
                 Grid.Row="5"
                 Grid.Column="3"/>

        <Label Content="Место выдачи"
               Grid.Row="1"
               Grid.Column="5"
               Style="{StaticResource LabelNormal}"/>
        <TextBox x:Name="PlaceIssueTb"
                 Grid.Row="1"
                 Grid.Column="6"/>

        <Label Content="Код отдела"
               Grid.Row="3"
               Grid.Column="5"
               Style="{StaticResource LabelNormal}"/>
        <TextBox x:Name="DepartmentCodeTb"
                 Grid.Row="3"
                 Grid.Column="6"
                 SpellCheck.IsEnabled="False"
                 PreviewTextInput="DepartmentCodeTb_PreviewTextInput"/>

        <Button x:Name="SaveBtn"
Grid.Column="6"
Grid.Row="7"
Click="SaveBtn_Click">
            <StackPanel Orientation="Horizontal"
  HorizontalAlignment="Center"
  VerticalAlignment="Center">
                <Image Style="{StaticResource SaveIm}" 
   Margin="7"/>
                <TextBlock Text=" Сохранить изменения" VerticalAlignment="Center" 
Style="{StaticResource TextBlockInBtn}"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
